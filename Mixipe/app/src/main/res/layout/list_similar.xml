<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:id="@+id/Similar_Holder">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Similar_Title"
            android:text="Similar Title"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/teal_700"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/Similar_Image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/Similar_Serving"
            android:text="Similar 1"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="@integer/material_motion_duration_long_1"
            android:scrollHorizontally="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>